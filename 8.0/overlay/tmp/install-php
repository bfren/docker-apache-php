#!/bin/sh

set -euo pipefail


#======================================================================================================================
# Install PHP8.
#======================================================================================================================

apk add --no-cache \
    php8=${1} \
    php8-apache2=${1} \
    php8-common=${1} \
    php8-session=${1}


#======================================================================================================================
# Create symlinks so PHP can be called on the commandline using php.
#======================================================================================================================

ln -s /usr/bin/php8 /usr/bin/php
